<div class="container">
  <%= render 'errors' %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-2" %>
        </div>
      <% end %>
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-underline-hover text-info"%>
    </div>
  </div>
</div>
